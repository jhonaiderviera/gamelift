<div class="auth-wrapper">

  <div class="auth-left">
    <div class="auth-card">

      <!-- Header -->
      <div class="auth-header">
        <span class="auth-logo">GAMELIFT</span>
        <h1 class="auth-title">Welcome Back</h1>
        <p class="auth-subtitle">Enter your credentials to continue.</p>
      </div>

      <!-- Error server side -->
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error" role="alert" aria-live="polite">
          <%= error %>
        </div>
      <% } %>

      <!-- Form -->
      <form class="auth-form" action="/auth/login" method="POST" novalidate>

        <div class="form-group">
          <label for="email" class="sr-only">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-input"
            placeholder="Email Address"
            required
            autocomplete="email"
            inputmode="email"
          >
        </div>

        <div class="form-group">
          <label for="password" class="sr-only">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-input"
            placeholder="Password"
            required
            minlength="6"
            autocomplete="current-password"
          >
        </div>

        <div class="form-options">
          <label class="custom-check">
            <input type="checkbox" name="remember" value="1" autocomplete="off">
            <span>Remember me</span>
          </label>

          <a href="#" class="auth-link" style="font-size: 0.85rem;">
            Forgot password?
          </a>
        </div>

        <button type="submit" class="btn btn-primary btn-block">
          Sign In
        </button>
      </form>

      <!-- Footer -->
      <div class="form-footer">
        New to GameLift?
        <a href="/auth/register" class="auth-link">Create an account</a>
      </div>

    </div>
  </div>

  <!-- Panel visual -->
  <div
    class="auth-right"
    style="background-image: url('<%= data.bgImage %>');"
    aria-hidden="true"
  ></div>

</div>
