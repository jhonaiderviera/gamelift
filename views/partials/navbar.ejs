<header class="site-header">
  <div class="container">
    <div class="nav">
      
      <a class="brand" href="/">
        <span class="brand-mark">GAMELIFT</span>
      </a>

      <button class="nav-toggle" type="button" aria-controls="navMenu" aria-expanded="false">
        <span class="nav-toggle-line"></span>
        <span class="nav-toggle-line"></span>
        <span class="nav-toggle-line"></span>
      </button>

      <nav id="navMenu" class="nav-menu" aria-label="Primary navigation">
        <a class="nav-link <%= (active === 'index') ? 'is-active' : '' %>" href="/">Home</a>
        <a class="nav-link <%= (active === 'games') ? 'is-active' : '' %>" href="/games">Games</a>
        <a class="nav-link <%= (active === 'features') ? 'is-active' : '' %>" href="/features">New Features</a>
        <a class="nav-link <%= (active === 'support') ? 'is-active' : '' %>" href="/support-developers">Support Developers</a>
      </nav>

      <div class="nav-actions">
        
        <% if (locals.user) { %>
          <a href="/profile" class="btn btn-ghost btn-sm" style="display: flex; align-items: center; gap: 10px; padding: 6px 12px; border-radius: 50px;">
            <img 
              src="<%= (user.avatarUrl) ? user.avatarUrl : 'https://ui-avatars.com/api/?name=' + (user.username || user.email) + '&background=random&color=fff' %>" 
              alt="Profile"
              style="width: 28px; height: 28px; border-radius: 50%; object-fit: cover;"
            >
            <span style="font-weight: 600;">Profile</span>
          </a>

        <% } else { %>
          <a class="btn btn-ghost btn-sm" href="/auth/login">Login</a>
          <a class="btn btn-primary btn-sm" href="/auth/register">Register</a>
        <% } %>

      </div>

    </div>
  </div>
</header>