<section class="games-hero">
    <div class="games-hero__bg" aria-hidden="true"></div>
  
    <div class="games-hero__content">
      <h1 class="games-hero__title"><%= data.hero.title %></h1>
      <p class="games-hero__subtitle"><%= data.hero.subtitle %></p>
  
      <div class="games-hero__toolbar">
        <div class="games-hero__actions">
          <a class="btn btn-primary" href="#trending" id="exploreTrending">Explore Trending</a>
          <a class="btn btn-ghost" href="#best" id="jumpToBest">Jump to Best</a>
        </div>
  
        <form class="games-search" id="gamesSearchForm" role="search" aria-label="Search games">
          <label class="sr-only" for="searchInput">Search for a game</label>
          <input
            type="text"
            id="searchInput"
            name="q"
            placeholder="Search for a game..."
            autocomplete="off"
          />
          <button class="btn btn-primary" type="submit" id="btnSearch">Search</button>
          <button class="btn btn-ghost" type="button" id="btnRandom" title="Load random games">Random Game Selection</button>
        </form>
      </div>
    </div>
  </section>
  
  <section class="container games-page">
  
    <div id="normalMode">
      <% data.sections.forEach(section => { %>
        <section class="slider-block" id="<%= section.id %>" data-slider>
          
          <div class="slider-block__header">
            <h2 class="slider-block__title"><%= section.title %></h2>
            
            <div class="slider-header-right">
              <button class="btn-see-all" type="button" data-section-target="<%= section.id %>">
                See all
              </button>
              
              <div class="slider-arrows">
                <button class="arrow-btn arrow-btn--prev" type="button" data-slider-prev aria-label="Previous slide">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
                <button class="arrow-btn arrow-btn--next" type="button" data-slider-next aria-label="Next slide">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>
  
          <div class="slider" data-slider-track>
            <% if (!section.items || section.items.length === 0) { %>
              <div class="empty-state">
                <p>No games found in this section.</p>
              </div>
            <% } else { %>
              <% section.items.forEach(game => { %>
                <article class="game-card" tabindex="0" data-game-id="<%= game.id %>">
                  <div class="game-card__media">
                    <img
                      src="<%= game.coverUrl || game.heroFallbackUrl || '/images/Community.png' %>"
                      alt="<%= game.name %> cover"
                      loading="lazy"
                    />
                    
                    <div class="game-card__overlay">
                      <div class="game-card__meta">
                        <span class="pill">View details</span>
                        
                        <% if (game.rating !== null && game.rating !== undefined) { %>
                          <span class="rating-badge"><%= game.rating %></span>
                        <% } else { %>
                          <span class="rating-badge rating-badge--muted">-</span>
                        <% } %>
                      </div>
                    </div>
                  </div>
  
                  <div class="game-card__body">
                    <h3 class="game-card__title" title="<%= game.name %>"><%= game.name %></h3>
                    <p class="game-card__sub">
                      <% if (game.ratingCount) { %>
                        <span class="muted"><%= game.ratingCount.toLocaleString() %> votes</span>
                      <% } else { %>
                        <span class="muted">No votes</span>
                      <% } %>
                    </p>
                  </div>
                </article>
              <% }) %>
            <% } %>
          </div>
        </section>
      <% }) %>
    </div>
  
    <section id="searchMode" class="search-mode hidden" aria-live="polite">
      <header class="search-mode__head">
        <h2 class="search-mode__title" id="resultsTitle">Search results</h2>
        <p class="search-mode__meta muted" id="resultsMeta"></p>
      </header>
  
      <div class="search-mode__states">
        <div id="resultsLoading" class="results-state hidden">Loading games...</div>
        <div id="resultsEmpty" class="results-state hidden">No results found.</div>
        <div id="resultsError" class="results-state hidden">Something went wrong. Please try again.</div>
      </div>
  
      <div id="resultsGrid" class="results-grid">
        </div>
    </section>
  
  </section>